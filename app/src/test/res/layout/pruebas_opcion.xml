<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Opcion"
        android:id="@+id/mostrar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/opcion_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Opcion Id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />  <!-- cambiar por gone -estÃ¡ ahi pero no se muestra-->
    <TextView
        android:id="@+id/opcion_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Texto opcion"
        android:paddingLeft="6dip"

        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginTop="137dp"
        android:layout_below="@+id/opcion_Id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/opcion_id_pregunta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="opcion id pregunta"
        android:paddingLeft="6dip"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_alignTop="@+id/opcion_id_categoria"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </TextView>

    <TextView
        android:id="@+id/opcion_id_categoria"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="opcion id categoria"
        android:paddingLeft="6dip"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_below="@+id/opcion_texto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="99dp" />



</RelativeLayout>